<h1>Listing speeches</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Title</th>
      <th>Mp3 file name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speeches.each do |speech| %>
      <tr>
        <td><%= speech.position %></td>
        <td><%= speech.title %></td>
        <td><%= speech.mp3_file_name %></td>
        <td><%= speech.description %></td>
        <td><%= link_to 'Show', speech %></td>
        <td><%= link_to 'Edit', edit_speech_path(speech) %></td>
        <td><%= link_to 'Destroy', speech, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

